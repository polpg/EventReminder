<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalendarTextDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/cal_text_date</item>
        <item name="android:textSize">@dimen/cal_date_size</item>
        <item name="fontFamily">@font/lato</item>
    </style>

</resources>
